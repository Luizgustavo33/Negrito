@model IEnumerable<Negrito.Models.Agendamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Periodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profissional)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Periodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profissional.Bairro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDAgendamento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDAgendamento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDAgendamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
